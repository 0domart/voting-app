{
  "version": "0.1.0",
  "name": "voting",
  "instructions": [
    {
      "name": "createVote",
      "accounts": [
        {
          "name": "voteAccount",
          "isMut": true,
          "isSigner": true
        },
        {
          "name": "user",
          "isMut": true,
          "isSigner": true
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "topic",
          "type": "string"
        },
        {
          "name": "options",
          "type": {
            "vec": "string"
          }
        },
        {
          "name": "votingDays",
          "type": "i32"
        }
      ]
    },
    {
      "name": "vote",
      "accounts": [
        {
          "name": "voteAccount",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "voterAccount",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "user",
          "isMut": true,
          "isSigner": true
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "optionIndex",
          "type": "u8"
        }
      ]
    }
  ],
  "accounts": [
    {
      "name": "VoteAccount",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "topic",
            "type": "string"
          },
          {
            "name": "votingDeadline",
            "type": "i64"
          },
          {
            "name": "optionsCount",
            "type": "u8"
          },
          {
            "name": "options",
            "type": {
              "vec": {
                "defined": "VoteOption"
              }
            }
          }
        ]
      }
    },
    {
      "name": "Voter",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "voted",
            "type": "bool"
          }
        ]
      }
    }
  ],
  "types": [
    {
      "name": "VoteOption",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "name",
            "type": "string"
          },
          {
            "name": "votes",
            "type": "u64"
          }
        ]
      }
    }
  ],
  "errors": [
    {
      "code": 6000,
      "name": "VotingIsOver",
      "msg": "Voting period is over!"
    },
    {
      "code": 6001,
      "name": "AlreadyVoted",
      "msg": "You have already voted!"
    },
    {
      "code": 6002,
      "name": "InvalidOption",
      "msg": "Invalid option!"
    }
  ]
}
